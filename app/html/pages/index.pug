extends ../template
include ../_mixin

block title
  title title

block description
  meta(name='', content='')

block color
  +color('#ccc')

block loadFont
  link(href="https://fonts.googleapis.com/css?family=Roboto", rel="stylesheet")

block loadCSS
  link(rel="stylesheet", href="css/index.css")
  link(rel="stylesheet", href="css/libs.css")

block content
  .wrap
    header.header
      .header_wrap_text
        h1 Добро пожаловать
        p Перед вами сервис, который поможет вам организовать свои фотографии в альбомы и поделиться ими со всем миром!
      form.form
        svg(class="icon soc_email")
          use(xlink:href='#soc_email')
        input(type="email" placeholder="Электронная почта")
        input(type="pasworld" placeholder="Пароль")

block loadJS
    script(src="js/commons.js")
    script(src="js/index.js")

